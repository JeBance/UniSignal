{
  "name": "unisignal-relay",
  "version": "1.0.0",
  "description": "UniSignal Relay - промежуточный шлюз для нормализации и трансляции сигналов из Telegram",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:migrate": "node-pg-migrate --migration-file-language ts",
    "db:migrate:up": "node-pg-migrate --migration-file-language ts up",
    "db:migrate:down": "node-pg-migrate --migration-file-language ts down",
    "db:migrate:redo": "node-pg-migrate --migration-file-language ts redo"
  },
  "keywords": [
    "telegram",
    "crypto",
    "signals",
    "websocket",
    "relay"
  ],
  "author": "JeBance",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-pg-migrate": "^7.5.2",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.0",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^7.2.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "supertest": "^7.2.2",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
